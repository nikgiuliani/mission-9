@{

}

@model BooksViewModel

<div class="bg-dark text-white p-2">
    <span class="navbar-brand ml-2"> Book Store </span>
</div>

@foreach (Books b in Model.Books)
{
    @* This prints out all the info *@

    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @b.Title
                <span class="badge badge-pill badge-primary" style="float:right">
                    <small>@b.Price.ToString("c")</small>
                </span>
            </h4>
            <div class="card-text p-1">
                <div>Author: @b.Author</div>
                <div>Publisher: @b.Publisher</div>
                <div>ISBN: @b.Isbn</div>
                <div>Classification: @b.Classification</div>
                <div>Category: @b.Category</div>
                <div>Page Count: @b.PageCount</div>
            </div>
        </div>
    </div>
}

<div page-model="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1"></div>
